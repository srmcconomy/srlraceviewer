{
	"name": "SRL Race Viewer ",
	"description": "See which SRL races are ongoing",
	"version": "0.5",
	"icons": {	"16": "images/16.png",
				"48": "images/48.png",
				"128": "images/128.png" },
	"permissions": [
		"activeTab",
		"alarms",
		"storage",
		"notifications"
	],
	"background": {
		"scripts": ["js/jquery.min.js", "js/background.js"],
		"persistant": false
	},
	"options_page":"options.html",
	"browser_action": {
		"default_icon": {
			"19": "images/stuff.png"
		},
		"default_title": "SRL Races",
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}
